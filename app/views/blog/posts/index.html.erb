<p style="color: green"><%= notice %></p>

<% content_for :title, "Posts" %>

<h1>Posts</h1>

<%= link_to "New post", new_blog_post_path %>

<% if @blog_posts.any? %>
  <div id="blog_posts">
    <% @blog_posts.each do |blog_post| %>
      <%= render blog_post %>
    <% end %>
  </div>
<% else %>
  <p>No posts yet.</p>
<% end %>
